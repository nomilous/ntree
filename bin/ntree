#!/usr/bin/env node

var path = require('path');
var ntree = require('../');

ntree.create({
  mount: path.normalize(__dirname + '/../test_data'),
  lazy: true,
})

.then(function(tree) {

  // console.log(Object.keys(tree._meta.nodes));
  // console.log(tree);

  console.log(tree);

})

.catch(function(e) {

  console.log(e.stack);
  process.exit(e.errno || 1);
  
})
