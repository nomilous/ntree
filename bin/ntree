#!/usr/bin/env node

var path = require('path');
var ntree = require('../');

ntree.create({
  mount: path.normalize(__dirname + '/../test_data'),
  lazy: true,
})

.then(function(tree) {

  var repl = require('repl')
  var os = require('os')
  var empty = '(' + os.EOL + ')'
  var r = repl.start({
    input: process.stdin,
    output: process.stdout,

    useGlobal: true
  });

  r.context.solar_system = tree;

  require('repl.history')(r, process.env.HOME + '/.node_history');

})

.catch(function(e) {

  console.log(e.stack);
  process.exit(e.errno || 1);
  
})
